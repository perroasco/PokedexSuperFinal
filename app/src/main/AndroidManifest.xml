<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.fer.pokedex">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/pokebola"
        android:label="@string/app_name"
        android:roundIcon="@drawable/pokebola"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="org.fer.pokedex.activities.SplashActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="org.fer.pokedex.activities.PokemonTypeActivity" />
        <activity android:name="org.fer.pokedex.activities.FavoritesActivity" />
        <activity android:name="org.fer.pokedex.activities.PokemonDetailsActivity" />
        <activity android:name="org.fer.pokedex.activities.MainActivity"/>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>